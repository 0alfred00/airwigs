<h3>Create a new list</h3>
<%= simple_form_for @offer do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :color %>
  <%= f.input :length %>
  <%= f.select :size, options_for_select(%w["S", "M", "L"]) %>
  <%= f.input :style %>
  <%= f.submit class: 'btn btn-flat' %>
<% end %>
