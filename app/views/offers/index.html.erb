<div class="container text-center pt-4">
    <div class="row">
      <% @offers.each do |offer| %>
        <div class="col-12 col-sm-12 col-md-6 col-lg-3 p-3 d-flex justify-content-center">
          <div class="card formbg" style="width: 18rem;">
            <%= cl_image_tag offer.photo.key, alt: "Wig", class: "card-img-top index-img", crop: :fill %>
            <div class="card-body">
              <h5 class="card-title"><%= link_to offer.title, offer_path(offer) %></h5>
              <p class="card-text"><%= offer.description %></p>
            </div>
          </div>
        </div>
        <br>
      <% end %>
    </div>
</div>
