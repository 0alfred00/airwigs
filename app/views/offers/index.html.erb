<h1>Browse wigs</h1>

<div class="container text-center">
  <ul>
    <div class="row">
      <% @offers.each do |offer| %>
        <div class="col-12 col-sm-12 col-md-6 col-lg-3 p-3">
          <div class="card" style="width: 18rem;">
            <%= image_tag "balloon.webp", alt: "Wig", class: "card-img-top" %>
            <div class="card-body">
              <li>
                <h5 class="card-title"><%= link_to offer.title, offer_path(offer), class: "link" %></h5>
                <p class="card-text"><%= offer.description %></p>
              </li>
            </div>
          </div>
        </div>
        <br>
      <% end %>
    </div>
  </ul>
</div>
