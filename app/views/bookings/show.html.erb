<div class="card text-center">
  <div class="card-header">
    <h2><%= @booking.offer.title %><h2>
  </div>
  <div class="card-body">
    <h5 class="card-title">Status: <%= @booking.status %></h5>
    <p class="card-text">Booking Start Date: <%= @booking.start_date %></p>
     <p class="card-text">Booking End Date: <%= @booking.end_date %></p>
     <%= link_to "Go back", root_path, class: "btn btn-secondary" %>
  </div>
  <div class="card-footer text-muted">
    <h4>Booking Created at: <%= @booking.created_at %></h4>
  </div>
</div>
